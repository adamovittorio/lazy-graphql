{
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "target": "es2018",
    "lib": [ "es2018" ],
    "resolveJsonModule": true,
    "preserveWatchOutput": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}