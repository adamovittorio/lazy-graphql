{
  "name": "@lazy-graphql/shared",
  "version": "1.0.1",
  "description": "Reusable modules and types shared accross the lazy-graphql services",
  "license": "ISC",
  "author": "Vittorio Adamo",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf ./dist && rm -rf tsconfig.tsbuildinfo",
    "compile": "tsc -b tsconfig.json",
    "lint": "tsc --noEmit && eslint 'src/**/*.ts' --quiet --fix",
    "pre-commit": "tsc --noEmit && lint-staged",
    "prettier": "prettier --write 'src/**/*.{ts,json}'",
    "prepublish": "npm run build",
    "start:dev": "npm run watch",
    "watch": "tsc -w --incremental",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run test",
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/jest": "^24.0.24",
    "@types/node": "^12.12.12",
    "@types/pino": "^5.14.0",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.7.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "pino-colada": "^1.5.0",
    "prettier": "1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "agentkeepalive": "^4.1.0",
    "fastify": "^2.10.0",
    "fastify-compress": "^1.1.0",
    "fastify-cors": "^3.0.0",
    "fastify-helmet": "^3.0.2",
    "got": "^11.8.5",
    "pino": "^5.14.0"
  }
}
