{
  "name": "@lazy-graphql/graphql-gateway",
  "version": "1.0.0",
  "description": "Graphql Gateway",
  "scripts": {
    "start": "node ./dist",
    "watch": "tsc -w --incremental",
    "dev": "nodemon --watch ./dist --inspect=0.0.0.0:9229 --nolazy ./dist/index.js",
    "docker-debug": "docker-compose up",
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf ./dist && rm -rf tsconfig.tsbuildinfo",
    "compile": "tsc -b tsconfig.json"
  },
  "dependencies": {
    "@lazy-graphql/shared": "1.0.1"
  },
  "devDependencies": {
    "@types/node": "^12.12.12",
    "nodemon": "^2.0.1",
    "typescript": "^3.7.2"
  },
  "author": "Vittorio Adamo",
  "license": "ISC"
}
