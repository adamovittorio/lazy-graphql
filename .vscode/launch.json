  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Graphql Videogame Service",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": ["--watch", "./dist"],
      "preLaunchTask": "Watch Graphql Videogame Service",
      "program": "${workspaceFolder}/services/videogames/dist/index.js",
      "envFile": "${workspaceFolder}/services/videogames/.env",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Graphql User Service",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": ["--watch", "./dist"],
      "preLaunchTask": "Watch Graphql User Service",
      "program": "${workspaceFolder}/services/users/dist/index.js",
      "envFile": "${workspaceFolder}/services/users/.env",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
