  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Graphql Gateway",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [ "--watch", "./dist" ],
      "preLaunchTask": "Watch Graphql Gateway",
      "program": "${workspaceFolder}/packages/graphql-gateway/dist/index.js",
      "envFile": "${workspaceFolder}/packages/graphql-gateway/.env",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Graphql User Service",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [ "--watch", "./dist" ],
      "preLaunchTask": "Watch Graphql User Service",
      "program": "${workspaceFolder}/packages/graphql-user-service/dist/index.js",
      "envFile": "${workspaceFolder}/packages/graphql-user-service/.env",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Docker - Graphql Gateway",
      "preLaunchTask": "Watch Graphql Gateway",
      "cwd": "${workspaceFolder}/packages/graphql-gateway/",
      "runtimeExecutable": "npm",
      "runtimeArgs": [ "run", "docker-debug"],
      "port": 9229,
      "address": "0.0.0.0",
      "restart": true,
      "timeout": 60000,
      "localRoot": "${workspaceFolder}/packages/graphql-gateway/dist",
      "remoteRoot": "/usr/src/service/dist",
      "outFiles": [
        "${workspaceFolder}/packages/graphql-gateway/dist/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
  ]
}