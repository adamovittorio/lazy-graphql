	"version": "0.2.0",
	"compounds": [
		{
			"name": "Lazy Graphql",
			"configurations": ["Graphql Gateway Service", "Graphql Learning Content Service", "Graphql User Service"]
		}
	],
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Graphql Gateway Service",
			"port": 9229,
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Graphql User Service",
			"port": 9228,
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Graphql Learning Content Service",
			"port": 9227,
			"skipFiles": ["<node_internals>/**"]
		}
	]
}
